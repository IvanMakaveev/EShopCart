@using EShopCart.Models;
@model OrderInputModel
@{
    ViewData["Title"] = "Finalize Order";
    var cities = this.Model.CityItems.Select(x => new SelectListItem(x.Value, x.Key));
}

<div class="col-md-7">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <form asp-action="Order" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Phone"></label>
            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="City"></label>
            <select asp-for="City" class="form-control" asp-items="cities"></select>
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Street"></label>
            <input asp-for="Street" class="form-control" />
            <span asp-validation-for="Street" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Number"></label>
            <input asp-for="Number" class="form-control" />
            <span asp-validation-for="Number" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Other"></label>
            <input asp-for="Other" class="form-control" />
            <span asp-validation-for="Other" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Finish Order</button>
    </form>
</div>
